name: CI/CD Pipeline for Next.js Dashboard

on:
  push:
    branches:
      - main  # Trigger on push to the main branch
  pull_request:
    branches:
      - main  # Trigger on pull request to the main branch

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Set up Node.js
      uses: actions/setup-node@v2
      with:
        node-version: '16'

    - name: Install dependencies
      run: npm install

    - name: Run tests
      run: npm test  # Only run this if you have tests in your app

    - name: Build Docker image
      run: |
        docker build -t ${{ secrets.DOCKER_USERNAME }}/nextjs-dashboard:$GITHUB_SHA .

    - name: Login to DockerHub
      run: echo ${{ secrets.DOCKER_PASSWORD }} | docker login -u ${{ secrets.DOCKER_USERNAME }} --password-stdin

    - name: Push Docker image
      run: |
        docker push ${{ secrets.DOCKER_USERNAME }}/nextjs-dashboard:$GITHUB_SHA

  deploy:
    runs-on: ubuntu-latest
    needs: build  # Ensure deploy runs after build job

    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Set up Kubernetes credentials
      uses: azure/setup-kubernetes@v1
      with:
        kubeconfig: ${{ secrets.KUBECONFIG }}

    - name: Deploy to Kubernetes
      run: |
        kubectl set image deployment/nextjs-dashboard nextjs-dashboard=${{ secrets.DOCKER_USERNAME }}/nextjs-dashboard:$GITHUB_SHA
        kubectl rollout status deployment/nextjs-dashboard
